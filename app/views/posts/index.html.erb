<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Title</th>
      <th>Content</th>
      <% if user_signed_in? %>
          <th>username</th>
        <th colspan="4"></th>
        <% else %>
          <th colspan="3"></th>
        <% end %>

    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.name %></td>
        <td><%= post.title %></td>
        <td><%= post.content %></td>
         <% if user_signed_in? %>
           <td><%= post.username %></td>

        <% end %>
      
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
<%= link_to "Sign out", destroy_user_session_path, :method => :delete %>
<%= link_to "Enter Club", new_user_session_path, :method => :new%>
